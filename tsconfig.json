{
    "compilerOptions": {
        "target": "es5",
        "noImplicitAny": true,
        "outDir": "built",
        "rootDir": "."
    },
    "exclude": ["pxt_modules/**/*test.ts"],
    "yotta": {
        "config": {
            "microbit-dal": {
                "bluetooth": {
                    "dfu_service": 0,
                    "event_service": 0,
                    "device_info_service": 0,
